@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8"/>
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="stylesheet" href="/css/Index.css" />
        <title> TFL - HomePage</title>
    </head>
    <body>
        <div class="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="/img/PhotoShoot/Photoshoot.jpg" alt="Category 1">
                    <div class="carousel-caption">
                        <h1>Cotton</h1>
                        <p>The Fabric Lab Presents</p>
                        <a href="#" class="shop-button">Shop Here</a>
                    </div>
                </div>
                <div class="carousel-item">
                    <img src="/img/PhotoShoot/Photoshoot.jpg" alt="Category 2">
                    <div class="carousel-caption">
                        <h1>Exclusives</h1>
                        <p>The Fabric Lab Presents</p>
                        <a href="#" class="shop-button">Shop Here</a>
                    </div>
                </div>
                <div class="carousel-item">
                    <img src="/img/PhotoShoot/Photoshoot.jpg" alt="Category 3">
                    <div class="carousel-caption">
                        <h1>Seasonal Shawls</h1>
                        <p>The Fabric Lab Presents</p>
                        <a href="#" class="shop-button">Shop Here</a>
                    </div>
                </div>
                <div class="carousel-item">
                    <img src="/img/PhotoShoot/Photoshoot.jpg" alt="Category 4">
                    <div class="carousel-caption">
                        <h1>Seasonal Squares</h1>
                        <p>The Fabric Lab Presents</p>
                        <a href="#" class="shop-button">Shop Here</a>
                    </div>
                </div>
            </div>

            <button class="carousel-control prev" onclick="prevSlide()">&#10094;</button>
            <button class="carousel-control next" onclick="nextSlide()">&#10095;</button>
            <div class="carousel-indicators">
                <button onclick="goToSlide(0)" class="active"></button>
                <button onclick="goToSlide(1)"></button>
                <button onclick="goToSlide(2)"></button>
                <button onclick="goToSlide(3)"></button>
            </div>
        </div>
        <!--Product Categories-->
        <div class="product-categories">
            <h2>Product Categories</h2>
            <div class="category-container">
                <a href="#" class="category-item">
                    <img src="/img/Items/Black Ribbon.JPG" alt="Cotton">
                    <span class="category-text">Cotton</span>
                </a>
                   
                <a href="#" class="category-item">
                    <img src="/img//Items/blue flower.jpg" alt="Exclusives">
                    <span class="category-text">Exclusives</span>
                </a>
                <a href="#" class="category-item">
                    <img src="/img/Items/Couquette.JPG" alt="Seasonal Shawls">
                    <span class="category-text">Seasonal Shawls</span>
                </a>
                <a href="#" class="category-item">
                    <img src="/img/Items/pink coquette.JPG" alt="Seasonal Squares">
                    <span class="category-text">Seasonal Squares</span>
                </a>
            </div>
        </div>
        <!--Style Catalogue-->
        <div class="style-catalogue">
            <h2>Style Catalogue</h2>
            <div class="style-container">
                <div class="style-item">
                    <a href="#">
                        <img src="/img/PhotoShoot/Style Catalog1.jpg" alt="Style 1">
                        <span class="style-text">Style 1</span>
                    </a>                    
                </div>
                <div class="style-item">
                    <a href="#">
                        <img src="/img/PhotoShoot/Style Catalog2.jpg" alt="Style 2">
                        <span class="style-text">Style 2</span>
                    </a>                   
                </div>
                <div class="style-item">
                    <a href="#">
                        <img src="/img/PhotoShoot/Style Catalog3.jpg" alt="Style 3">
                        <span class="style-text">Style 3</span>
                    </a>
                </div>
                <div class="style-item">
                    <a href="#">
                        <img src="/img/PhotoShoot/Style Catalog4.jpg" alt="Style 4">
                        <span class="style-text">Style 4</span>
                    </a>                    
                </div>
            </div>
        </div>
        <!--Banner Section-->
        <div class="banner-section">
            <div class="banner-content">
                <h1>The Fabric Lab</h1>
                <p>Where to find us</p>
            </div>
        </div>
        <script src="/js/Index.js"></script>
    </body>
</html>


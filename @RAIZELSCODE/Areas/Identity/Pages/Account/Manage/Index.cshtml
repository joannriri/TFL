@page
@model TheFabricsLab.Areas.Identity.Pages.Account.Manage.IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}
<style>
    .detail-box {
        background-color: whitesmoke;
        padding: 5%;
        border-radius: 8px;
    }
    .inner-details{
        padding-left: 5%;
        padding-top: 2%;
    }
    .form-floating .form-control {
        height: auto;
    }
    .form-floating .form-label{
        display: none;
    }
    #update-button {
        color: white;
        background-color: #A89060;
        width: 150px;
    }
    media (max-width: 768px) {
    .col-md-6 {
        max-width: 100%;
    }
</style>

<div class="detail-box">
    <h3><b>My Details</b></h3>

    <br />

    <form method="post">
        <div class="row">
            <div class="col-md-6 inner-details">
                <div>
                    <b>First Name</b>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.FirstName" class="form-control" placeholder="First Name" />
                        <label asp-for="Input.FirstName" class="form-label">@Model.appUser?.FirstName</label>
                    </div>
                </div>
            </div>

            <div class="col-md-6 inner-details">
                <div>
                    <b>Last Name</b>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.LastName" class="form-control" placeholder="Last Name" />
                        <label asp-for="Input.LastName" class="form-label">@Model.appUser?.LastName</label>
                    </div>
                </div>
            </div>

            <div class="col-md-6 inner-details">
                <div>
                    <b>Date of Birth</b>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.DateOfBirth" class="form-control" placeholder="Date of Birth" title="Disabled for editing" disabled />
                        <label asp-for="Input.DateOfBirth" class="form-label">@Model.appUser?.DateOfBirth.ToString("MM/dd/yyyy")</label>
                    </div>
                </div>
            </div>

            <div class="col-md-6 inner-details">
                <div>
                    <b>Phone Number</b>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Phone Number" />
                        <label asp-for="Input.PhoneNumber" class="form-label">@Model.appUser?.PhoneNumber</label>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12 inner-details">
                <div>
                    <label asp-for="Input.NewsletterSubscription" class="form-label">
                        <input class="form-check-input" asp-for="Input.NewsletterSubscription" />&nbsp;
                        @Html.DisplayNameFor(m => m.Input.NewsletterSubscription)
                    </label>
                </div>

                <br />
                <br />

                <div class="text-end">
                    <button type="submit" id="update-button" class="btn btn-sm">Update</button>
                </div>
            </div>
        </div>
    </form>
</div>


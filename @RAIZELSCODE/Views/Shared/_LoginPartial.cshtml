@using Microsoft.AspNetCore.Identity
@using TheFabricsLab.Areas.Identity.Data

@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager
<style>
    .user-nav-icon {
        height: 30px;
        width: auto;
    }
</style>

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
        if (User.IsInRole("admin"))
        {
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="Admin">Admin</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Shop" asp-action="Search"><img class="user-nav-icon" src="~/img/Search.png" alt="Search" /></a>
            </li>
            <li class="nav-item">
                <a id="manage" class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage"><img class="user-nav-icon" src="/img/User.png" alt="User" /></a>
            </li>
        }
        else if (User.IsInRole("manager"))
        {
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Shop" asp-action="Search"><img class="user-nav-icon" src="~/img/Search.png" alt="Search" /></a>
            </li>
            <li class="nav-item">
                <a id="manage" class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage"><img class="user-nav-icon" src="/img/User.png" alt="User" /></a>
            </li>
        }
        else if (User.IsInRole("customer"))
        {
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Shop" asp-action="Search"><img class="user-nav-icon" src="~/img/Search.png" alt="Search" /></a>
            </li>
            <li class="nav-item">
                <a id="manage" class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage"><img class="user-nav-icon" src="/img/User.png" alt="User" /></a>
            </li>
        }
}
else
{
    <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Shop" asp-action="Search"><img class="user-nav-icon" src="~/img/Search.png" alt="Search" /></a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" id="register" asp-area="Identity" asp-page="/Account/Register"><img class="user-nav-icon" src="~/img/User.png" alt="User" /></a>
    </li>

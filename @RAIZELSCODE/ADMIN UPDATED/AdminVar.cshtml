@model List<ProductVariants>
@{
    ViewData["Title"] = "Admin";
}

<style>
    body {
        background: linear-gradient(to bottom, #0C797C, #02333A);
    }

    .header-text {
        color: white;
    }

    .add-product {
        color: white;
        background-color: #A89060;
        width: 160px;
    }

    .detail-box {
        background-color: whitesmoke;
        padding: 5%;
        border-radius: 8px;
    }

    .search-bar {
        width: 80%;
        padding: 10px;
        margin-bottom: 15px;
        border: 1px solid #ccc;
        border-radius: 4px;
    }

    .search-button {
        width: 15%;
        padding: 10px;
        background-color: #A89060;
        color: white;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }
</style>

<br />
<br />
<div class="header-text">
    <h1 class="text-center">Welcome, Admin.</h1>
    <h2 class="text-center mb-5">List of Product Variants</h2>
</div>

<br />

<div class="detail-box">
    <div class="row mb-5">
        <div class="col">
            <a class="btn add-product" asp-controller="User" asp-action="Admin">Manage Products</a>&nbsp;&nbsp;&nbsp;
            <a class="btn add-product" asp-controller="User" asp-action="CreateVar">Add Variant</a>
        </div>
        <div class="col">
            <input type="text" id="colorSearch" class="search-bar" placeholder="Search by color...">
            <button class="search-button" onclick="filterTable()">Search</button>
        </div>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>ProductID</th>
                <th>Color</th>
                <th>Price</th>
                <th>Image</th>
                <th>Stock</th>
                @* <th>Created At</th> *@
                <th>Action</th>
            </tr>
        </thead>

        <tbody id="productTable">
            @foreach (var productVar in Model)
            {
                <tr>
                    <td>@productVar.VariantID</td>
                    <td>@productVar.ProductID</td>
                    <td>@productVar.Color</td>
                    <td>$@productVar.Price</td>
                    <td><img src="/img/Catalog/@productVar.ImageFile" width="100" /></td>
                    <td>@productVar.Stock</td>
                    @* <td>@product.CreatedAt.ToString("MM/dd/yyyy")</td> *@
                    <td style="white-space:nowrap">
                        <a class="btn btn-warning btn-sm" asp-controller="User" asp-action="EditVar" asp-route-id="@productVar.ProductID">Edit</a>
                        <a class="btn btn-danger btn-sm" asp-controller="User" asp-action="DeleteVar" asp-route-id="@productVar.ProductID" onclick="return confirm('Are you sure you want to delete this variant?')">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<br />
